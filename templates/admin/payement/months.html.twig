{% extends 'admin/base.html.twig' %}

{% block body %}

{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
{% endfor %}

<a href="{{ path('admin_add_month') }}" class="btn btn-link">
	<i class="fas fa-plus"></i> ajouter une mois
</a>
 {% if months|length == 0 %}
 	<h3 class="text-center bg-light">
 		Il n'a pas encore des mois !
 	</h3>
 {% else %}
  <table class="table">
  	<header>
      <th>Mois N°: </th>
      <th>Nom: </th>
      <th>Revenus : </th>
      <th> XXXXX </th>
      <th></th>
  	</header>
  	<body>
  		{% for month in months %}
            <tr>
            	<td> {{ month.id }} </td>
            	<td> {{ month.name }} </td>
            	<td> {{ month.inputs }} </td>
            	<td> {{ month.outputs }} </td>
              <td>
                <a href="{{path('admin_remove_month', {'id': month.id })}}"
                class="btn btn-sm" onclick="handelDelete()" >
                  <i class="fas fa-trash"></i>
                  Supprimer !
                </a>
                 <a href="{{path('admin_edit_month', {'id': month.id })}}"
                class="btn btn-sm">
                  <i class="fas fa-edit"></i>
                  Editer !
                </a>
              </td>
            </tr>
  		{% endfor %}
  	</body>
  </table>
{% endif %}

<script type="text/javascript">
  
  const handelDelete = () =>{
    alert('vous êtes sure de supprimer ce mois !');
  }

</script>

{% endblock %}