{% extends "admin/base.html.twig" %}

{% block body %}
{% if payements| length ==0 %}
<h3 class="text-center">
    Il n'a pas encore des paiements !.
</h3>
{% else %}
<h3> Classe : MATH </h3>
<table class="table table-stripped">
    <header>
        <th>Etudiant : </th>
        <th>Mois : </th>
        <th>Prix en Dh: </th>
        <th>Date : </th>
        <th>Vérifiée :</th>
    </header>

    <body>
        {% for payement in payements %}
        {% if payement.student.classe.name == "MATH" %}
        <tr>
    <td>{{ payement.student.user.name }}</td>
    <td>{{ payement.month.name }}</td>
    <td>{{ payement.price }}</td>
    <td>{{ payement.createdAt| date("Y/m/d H:i:s") }}</td>
    <td>
        {% if payement.verified %}
             <a href=" {{ path('admin_verify_payement', {'id':payement.id}) }} " class="btn btn-sm text-success">
                  <i class="fas fa-toggle-on"></i>
             </a>
        {% else %}
             <a href="{{ path('admin_verify_payement', {'id':payement.id}) }}" class="btn btn-sm text-danger">
                  <i class="fas fa-toggle-off"></i>
             </a>
        {% endif %}
      
    </td>
</tr>
        {% endif %}

        {% endfor %}
    </body>
</table>
