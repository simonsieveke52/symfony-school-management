{% extends 'admin/base.html.twig' %}

{% block title %}les proffesseurs{% endblock %}

{% block body %}
 
 {% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
{% endfor %}

<div class="container">

   <h1 class="alert-heading">Les proffesseurs de l'école :</h1>
    	<table class="table">
    		<thead>
    			<th> ID </th>
    			<th> Nom complète </th>
    			<th> Téléphone </th>
    			<th> Email </th>
    			<th> Salaire </th>
    			<th> Matière </th>
    			<th> classes</th>
    			<th></th>
    		</thead>
    		<tbody>
    			{% for prof in profs %}
    			<tr>
    			<td> {{ prof.id }} </td>
    			<td> {{ prof.name }} </td>
    			 <td>{{ prof.phone}}</td>
    			<td> {{ prof.email }} </td>
    			<td> {{ prof.salaire }} </td>
    			<td> {{ prof.matter }} </td>
    			<td> 
    				{% for class in prof.classes %}
                  <strong>{{ class.name }}</strong>
                     

    				{% endfor %}
    				

    			</td>
    			<td>
    				<a href="{{ path('admin_edit_prof', {'id': prof.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
    				<a href="{{ path('admin_remove_prof', {'id': prof.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    <a href="{{ path('prof_profile', {'id': prof.id}) }}" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                   
                    <a href="{{ path('admin_add_depayement', {'id':prof.id}) }}"

                     class="btn btn-success">

                     <i class="fas fa-dollar"></i>pay
                         
                     </a>
    				

    			</td>
    			</tr>	

    			{% endfor %}
    			
    			
    		</tbody>
    	</table>
    {{ knp_pagination_render(profs) }}
</div>
{% endblock %}
